{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "paths": {
      "#app/*": ["./app/*"],
      "#components/*": ["./components/*"],
      "#extractor/*": ["./extractor/*"],
      "#public/*": ["./public/*"],
      "#types/*": ["./types/*"],
      "#util/*": ["./util/*"]
    },
    "target": "ESNext",
    "types": ["@remix-run/cloudflare", "vite/client"]
  },
  "extends": "../../tsconfig.base.json",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/.server/**/*.ts",
    "**/.server/**/*.tsx",
    "**/.client/**/*.ts",
    "**/.client/**/*.tsx"
  ]
}
