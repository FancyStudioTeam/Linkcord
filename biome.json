{
	"$schema": "https://biomejs.dev/schemas/2.1.0/schema.json",
	"assist": {
		"actions": {
			"recommended": true,
			"source": {
				"useSortedAttributes": "on",
				"useSortedKeys": "on",
				"useSortedProperties": "on"
			}
		},
		"enabled": true
	},
	"files": {
		"includes": ["**", "!**/.turbo/**", "!**/dist/**"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineEnding": "lf",
		"lineWidth": 100
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	},
	"linter": {
		"domains": {
			"project": "all",
			"test": "all"
		},
		"enabled": true,
		"rules": {
			"complexity": {
				"noStaticOnlyClass": "off",
				"useSimplifiedLogicExpression": "error"
			},
			"correctness": {
				"noNodejsModules": "off",
				"noUndeclaredDependencies": "off",
				"useImportExtensions": "error"
			},
			"nursery": {
				"noImplicitCoercion": "error",
				"noMagicNumbers": "error",
				"noUnassignedVariables": "error",
				"noUnresolvedImports": "off",
				"useReadonlyClassProperties": "error",
				"useSortedClasses": "error",
				"useUnifiedTypeSignature": "error"
			},
			"performance": {
				"noBarrelFile": "off",
				"noReExportAll": "off"
			},
			"recommended": true,
			"style": {
				"noDefaultExport": "off",
				"useImportType": "error",
				"useNamingConvention": {
					"level": "warn",
					"options": {
						"conventions": [
							{
								"formats": ["camelCase", "snake_case"],
								"selector": {
									"kind": "typeProperty"
								}
							},
							{
								"formats": ["camelCase", "snake_case"],
								"selector": {
									"kind": "objectLiteralProperty"
								}
							}
						],
						"strictCase": false
					}
				}
			},
			"suspicious": {
				"noReactSpecificProps": "off",
				"useAwait": "error"
			}
		}
	}
}
