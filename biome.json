{
  "$schema": "https://biomejs.dev/schemas/2.0.0/schema.json",
  "assist": {
    "actions": {
      "recommended": true,
      "source": {
        "useSortedAttributes": "on",
        "useSortedKeys": "on",
        "useSortedProperties": "on"
      }
    },
    "enabled": true
  },
  "css": {
    "formatter": {
      "enabled": true
    },
    "linter": {
      "enabled": true
    }
  },
  "files": {
    "includes": [".js", "*.json", "*.ts", "src"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 120
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "linter": {
    "domains": {
      "project": "all",
      "test": "all"
    },
    "enabled": true,
    "rules": {
      "complexity": {
        "noStaticOnlyClass": "off"
      },
      "correctness": {
        "noNodejsModules": "off",
        "noUndeclaredDependencies": "off",
        "useImportExtensions": "error"
      },
      "nursery": {
        "noUnresolvedImports": "off",
        "useSortedClasses": "error"
      },
      "performance": {
        "noBarrelFile": "off",
        "noReExportAll": "off"
      },
      "recommended": true,
      "style": {
        "noDefaultExport": "off",
        "useImportType": "error",
        "useNamingConvention": {
          "level": "warn",
          "options": {
            "conventions": [
              {
                "formats": ["camelCase", "snake_case"],
                "selector": {
                  "kind": "typeProperty"
                }
              },
              {
                "formats": ["camelCase", "snake_case"],
                "selector": {
                  "kind": "objectLiteralProperty"
                }
              }
            ],
            "strictCase": false
          }
        }
      },
      "suspicious": {
        "noReactSpecificProps": "off",
        "useAwait": "error"
      }
    }
  }
}
